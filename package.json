{
  "name": "postcss-add-root-selector",
  "version": "1.0.2",
  "description": "PostCSS plugin adds root selector to all other rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "root"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Ivan Agafonov <armadil@yandex.ru>",
  "license": "MIT",
  "repository": "iagafonov/postcss-add-root-selector",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.1.5"
  },
  "devDependencies": {
    "clean-publish": "^1.1.8",
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "postcss": "^8.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
